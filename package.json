{
  "name": "vsscope",
  "displayName": "VSScope",
  "description": "A telescope menu for VS Code. Based on telescope for Neovim",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "VSScope Settings",
      "properties": {
        "vsscope.openInNewEditor": {
          "type": "boolean",
          "default": true,
          "description": "Opens files in a new editor"
        },
        "vsscope.ignore": {
          "type": "array",
          "default": [
            ".git"
          ],
          "description": "Files/Folders to ignore in the menu. Supports the .gitignore conventions"
        }
      }
    },
    "commands": [
      {
        "command": "vsscope.telescopeMenu",
        "title": "VSScope Menu"
      }
    ],
    "keybindings": [
      {
        "command": "vsscope.telescopeMenu",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
